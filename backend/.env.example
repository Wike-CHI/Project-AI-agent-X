# Environment Variables
# Copy this file to .env and fill in the values

# Application
APP_NAME=AI Companion
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=sqlite+aiosqlite:///./ai_companion.db

# JWT Authentication
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Providers (使用云端API - MiniMax + Kimi)
# 默认使用 MiniMax (主力)
DEFAULT_LLM_PROVIDER=minimax

# MiniMax API (主力)
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_MODEL=minimax-m2.1
MINIMAX_BASE_URL=https://api.minimax.chat/v1/text/chatcompletion_v2

# Kimi API (备选)
KIMI_API_KEY=your_kimi_api_key_here
KIMI_MODEL=kimi-k2.5
KIMI_BASE_URL=https://api.moonshot.cn/v1

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-small-zh
EMBEDDING_API_KEY=your-embedding-api-key

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=ai_companion_memory

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Redis (可选，用于缓存)
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
